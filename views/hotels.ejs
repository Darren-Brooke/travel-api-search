<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('partials/head.ejs'); %>
    <title>Hotel Meta-search Engine</title>

</head>

<body>

    <%- include ('partials/nav.ejs'); %>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="mb-5">
                <h2 class="display-3">Find your ideal Hotel</h2>
            </div>
        </div>

        <div class="row justify-content-center">
            <form action="/hotels" method="POST" class="form-inline">
                <div class="form-group mb-5">
                    <input type="text" name="item" class="form-control search-slt" placeholder="Destination" required>
                </div>
                <div class="form-group mb-5">
                    <input type="text" name="check" autocomplete="off" id="datepick" class="form-control search-slt" placeholder="check-in" required>
                </div>
                <div class="form-group mb-5">
                    <input type="text" name="out" autocomplete="off" id="datepicker" class="form-control search-slt" placeholder="check-out" required>
                </div>
                <div class="form-group mb-5">
                    <button type="submit" class="btn btn-danger wrn-btn">Search</button>
                </div>
            </form>
        </div>
    </div>
</body>

<%- include ('partials/script.ejs'); %>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
<link rel="stylesheet" type="text/css"
    href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/smoothness/jquery-ui.css" media="all">

<script>
    $(function () {
        $('#datepicker').datepicker({
            dateFormat: 'dd-mm-yy',
            minDate: 0
        });

    });

    $(function () {
        $('#datepick').datepicker({
            dateFormat: 'dd-mm-yy',
            minDate: 0
        });

    });
</script>

</html>